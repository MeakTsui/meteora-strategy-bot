# Solana RPC Configuration
RPC_URL=https://api.mainnet-beta.solana.com
RPC_WSS_URL=wss://api.mainnet-beta.solana.com

# Wallet Configuration (Base58 encoded private key)
WALLET_PRIVATE_KEY=your_base58_private_key_here

# Price Data Sources
HELIUS_API_KEY=your_helius_api_key
BIRDEYE_API_KEY=your_birdeye_api_key

# Strategy Configuration
TOTAL_CAPITAL_USDC=5000
MAIN_STRATEGY_ALLOCATION=0.70
TREND_STRATEGY_ALLOCATION=0.20
INSURANCE_STRATEGY_ALLOCATION=0.10

# Price Range Configuration
MIN_PRICE=100
MAX_PRICE=250
GRID_SIZE=5

# Bid-Ask Strategy Parameters
REDEPLOY_THRESHOLD=0.003
RANGE_WIDTH=5

# Trend Strategy Parameters
TREND_BREAKOUT_COUNT=3

# Insurance Strategy Parameters
INSURANCE_RANGES=80-100,60-80,40-60
REBOUND_THRESHOLD=0.10

# Bot Configuration
CHECK_INTERVAL_MS=60000
MAX_CONSECUTIVE_FAILURES=5
ENABLE_DRY_RUN=true

# Logging
LOG_LEVEL=info
